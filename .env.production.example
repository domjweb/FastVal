# Azure Production Environment Configuration Template
# Copy this to .env.production and fill in your values
# DO NOT commit .env.production to git

# Application
APP_NAME=FastVal
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=False

# Security
SECRET_KEY=your-production-secret-key-here  # Generate with: openssl rand -hex 32

# Database (Azure PostgreSQL)
DATABASE_URL=postgresql://fastvaladmin:YourPassword@fastval-prod-psql.postgres.database.azure.com:5432/fastval?sslmode=require

# CORS - Add your Azure frontend URL
BACKEND_CORS_ORIGINS=["https://fastval-prod-frontend.azurewebsites.net"]

# API Configuration
API_V1_PREFIX=/api/v1

# Azure Specific
WEBSITES_PORT=8000
WEBSITES_ENABLE_APP_SERVICE_STORAGE=false

# Optional: Azure Application Insights
# APPINSIGHTS_INSTRUMENTATIONKEY=your-instrumentation-key
